    <!-- Snippets menu -->
    <template id="snippets_trustcode" inherit_id="website.snippets">
      <xpath expr="//div[@id='snippet_structure']" position="before">
        <div class="o_panel_header">
          <i class="fa fa-th-large"/>Trustcode Snippets
        </div>
        <div class="o_panel_body">
          <t t-snippet="wiki_documentation.s_note" t-thumbnail="/wiki_documentation/static/src/img/blocks/note1.png"/>
          <t t-snippet="wiki_documentation.s_alert" t-thumbnail="/wiki_documentation/static/src/img/blocks/note2.png"/>
          <t t-snippet="wiki_documentation.s_attention" t-thumbnail="/wiki_documentation/static/src/img/blocks/note3.png"/>
          <!-- <t t-snippet="wiki_documentation.s_header_1" t-thumbnail="/wiki_documentation/static/src/img/blocks/title.png"/>
          <t t-snippet="wiki_documentation.s_header_2" t-thumbnail="/wiki_documentation/static/src/img/blocks/title.png"/> -->
          <t t-snippet="wiki_documentation.s_header_3" t-thumbnail="/wiki_documentation/static/src/img/blocks/title.png"/>
          <t t-snippet="wiki_documentation.s_header_4" t-thumbnail="/wiki_documentation/static/src/img/blocks/title.png"/>
          <t t-snippet="wiki_documentation.s_paragraph" t-thumbnail="/wiki_documentation/static/src/img/blocks/paragraph.png"/>
          <t t-snippet="wiki_documentation.s_picture" t-thumbnail="/wiki_documentation/static/src/img/blocks/image.png"/>
